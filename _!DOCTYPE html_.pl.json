                                                                                                                                                                                                                                                                                                                                                                                                                                                            align-items: center;
                                                                                                                                                                                                                                                                                                                                                                                                                                                                        box-shadow: 0 20px 40px rgba(0,0,0,0.4);
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                    transition: top 1.5s cubic-bezier(0.68, -0.55, 0.265, 1.55);
                                                                                                                                                                                                                                                                                                        }

                                                                                                                                                                                                                                                                                                                .d-pad {
                                                                                                                                                                                                                                                                                                                                position: absolute;
                                                                                                                                                                                                                                                                                                                                            left: 30px;
                                                                                                                                                                                                                                                                                                                                                        width: 70px;
                                                                                                                                                                                                                                                                                                                                                                    height: 70px;
                                                                                                                                                                                                                                                                                                                                                                                background: #2f3542;
                                                                                                                                                                                                                                                                                                                                                                                            border-radius: 20px;
                                                                                                                                                                                                                                                                                                                }

                                                                                                                                                                                                                                                                                                                        .buttons {
                                                                                                                                                                                                                                                                                                                                        position: absolute;
                                                                                                                                                                                                                                                                                                                                                    right: 30px;
                                                                                                                                                                                                                                                                                                                                                                display: flex;
