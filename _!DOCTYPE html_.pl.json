                                                                                                                                                                    0 0 0 20px rgba(255, 59, 95, 0.3);
                                                                                                                                                                                display: flex;
                                                                                                                                                                                            justify-content: center;
                                                                                                                                                                                                        align-items: center;
                                                                                                                                                                                                                    transform: rotate(-45deg);
                                                                                                                                                                                                                                animation: heartbeat 2.5s infinite;
