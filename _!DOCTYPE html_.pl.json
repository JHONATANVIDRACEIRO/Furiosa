                                                                                                                                                                                                                                                                                                                        }

                                                                                                                                                                                                                                                                                                                                .btn {
                                                                                                                                                                                                                                                                                                                                                width: 40px;
                                                                                                                                                                                                                                                                                                                                                            height: 40px;
                                                                                                                                                                                                                                                                                                                                                                        border-radius: 50%;
                                                                                                                                                                                                                                                                                                                                                                                    background: #e84118;
                                                                                                                                                                                                                                                                                                                                                                                                position: relative;
                                                                                                                                                                                                                                                                                                                                }

                                                                                                                                                                                                                                                                                                                                        .btn.y {
                                                                                                                                                                                                                                                                                                                                                        background: #ffdd59;
                                                                                                                                                                                                                                                                                                                                        }

                                                                                                                                                                                                                                                                                                                                                .btn.x {
                                                                                                                                                                                                                                                                                                                                                                background: #0fbcf9;
                                                                                                                                                                                                                                                                                                                                                }

