                                                                                                                                                                                                                                                            width: 40px;
                                                                                                                                                                                                                                                                        height: 40px;
                                                                                                                                                                                                                                                                                    background: #ffda79;
                                                                                                                                                                                                                                                                                                border-radius: 50%;
                                                                                                                                                                                                                                                                                                            box-shadow: 0 0 15px rgba(255,218,121,0.8);
                                                                                                                                                                                }

                                                                                                                                                                                        .gift-box::after {
                                                                                                                                                                                                        content: '';
                                                                                                                                                                                                                    position: absolute;
                                                                                                                                                                                                                                top: 20px;
                                                                                                                                                                                                                                            left: 50%;
                                                                                                                                                                                                                                                        transform: translateX(-50%);
                                                                                                                                                                                                                                                                    width: 60px;
                                                                                                                                                                                                                                                                                height: 20px;
                                                                                                                                                                                                                                                                                            background: #ff9ff3;
                                                                                                                                                                                                                                                                                                        border-radius: 5px;
                                                                                                                                                                                                                                                                                                                    box-shadow: 0 0 15px rgba(255,159,243,0.7);
                                                                                                                                                                                        }

                                                                                                                                                                                                .ribbon {
                                                                                                                                                                                                                position: absolute;
                                                                                                                                                                                                                            width: 100%;
                                                                                                                                                                                                                                        height: 15px;
                                                                                                                                                                                                                                                    background: #ff9ff3;
                                                                                                                                                                                                                                                                top: 35px;
                                                                                                                                                                                                                                                                            box-shadow: 0 0 10px rgba(255,159,243,0.6);
                                                                                                                                                                                                }

                                                                                                                                                                                                        .card {
                                                                                                                                                                                                                        position: fixed;
                                                                                                                                                                                                                                    top: 50%;
                                                                                                                                                                                                                                                left: 50%;
                                                                                                                                                                                                                                                            transform: translate(-50%, -50%) scale(0);
                                                                                                                                                                                                                                                                        width: 90%;
                                                                                                                                                                                                                                                                                    max-width: 500px;
                                                                                                                                                                                                                                                                                                background: #fff;
                                                                                                                                                                                                                                                                                                            border-radius: 20px;
                                                                                                                                                                                                                                                                                                                        padding: 30px;
                                                                                                                                                                                                                                                                                                                                    z-index: 1000;
                                                                                                                                                                                                                                                                                                                                                box-shadow: 0 20px 50px rgba(0,0,0,0.4);
                                                                                                                                                                                                                                                                                                                                                            color: #380000;
                                                                                                                                                                                                                                                                                                                                                                        opacity: 0;
                                                                                                                                                                                                                                                                                                                                                                                    transition: all 0.5s cubic-bezier(0.175, 0.885, 0.32, 1.275);
                                                                                                                                                                                                                                                                                                                                                                                                max-height: 90vh;
                                                                                                                                                                                                                                                                                                                                                                                                            overflow-y: auto;
                                                                                                                                                                                                        }

                                                                                                                                                                                                                .card.active {
                                                                                                                                                                                                                                transform: translate(-50%, -50%) scale(1);
                                                                                                                                                                                                                                            opacity: 1;
                                                                                                                                                                                                                }

                                                                                                                                                                                                                        .card h2 {
                                                                                                                                                                                                                                        color: #f50057;
                                                                                                                                                                                                                                                    margin-bottom: 20px;
                                                                                                                                                                                                                        }

                                                                                                                                                                                                                                .card-content {
                                                                                                                                                                                                                                                text-align: left;
                                                                                                                                                                                                                                                            line-height: 1.8;
                                                                                                                                                                                                                                                                        font-size: 18px;
                                                                                                                                                                                                                                                                                    margin-bottom: 25px;
                                                                                                                                                                                                                                }

                                                                                                                                                                                                                                        .signature {
