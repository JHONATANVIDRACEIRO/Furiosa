                                                                                                                                                                                                                                                                    font-weight: bold;
                                                                                                                                                                                                                                                                                color: #f50057;
                                                                                                                                                                                                                                                                                            margin-top: 20px;
                                                                                                                                                                                                                                                                                                        font-style: italic;
                                                                                                                                                                                                                                        }

                                                                                                                                                                                                                                                .close-btn {
                                                                                                                                                                                                                                                                background: #ff3b5f;
                                                                                                                                                                                                                                                                            color: #fff;
