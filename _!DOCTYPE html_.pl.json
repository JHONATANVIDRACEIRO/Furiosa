                                                                                                                                                                }

                                                                                                                                                                        .gift-number {
                                                                                                                                                                                        font-size: 28px;
                                                                                                                                                                                                    font-weight: bold;
                                                                                                                                                                                                                color: #fff;
                                                                                                                                                                                                                            text-shadow: 0 2px 5px rgba(0,0,0,0.3);
                                                                                                                                                                        }

                                                                                                                                                                                .gift-box::before {
                                                                                                                                                                                                content: '';
                                                                                                                                                                                                            position: absolute;
                                                                                                                                                                                                                        top: 0;
                                                                                                                                                                                                                                    left: 50%;
