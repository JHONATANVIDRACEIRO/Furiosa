                                                                                                                                                                                                                                                                                                                                                                                        }

                                                                                                                                                                                                                                                                                                                                                                                                /* Animaes */
                                                                                                                                                                                                                                                                                                                                                                                                        @keyframes float {
                                                                                                                                                                                                                                                                                                                                                                                                                        0%, 100% {
                                                                                                                                                                                                                                                                                                                                                                                                                                            transform: translate(0, 0) rotate(0deg);
                                                                                                                                                                                                                                                                                                                                                                                                                                                            opacity: 0;
                                                                                                                                                                                                                                                                                                                                                                                                                        }
                                                                                                                                                                                                                                                                                                                                                                                                                                    10% {
                                                                                                                                                                                                                                                                                                                                                                                                                                                        opacity: 1;
                                                                                                                                                                                                                                                                                                                                                                                                                                    }
                                                                                                                                                                                                                                                                                                                                                                                                                                                90% {
                                                                                                                                                                                                                                                                                                                                                                                                                                                                    opacity: 1;
                                                                                                                                                                                                                                                                                                                                                                                                                                                }
                                                                                                                                                                                                                                                                                                                                                                                                                                                            100% {
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                transform: translate(100px, -100vh) rotate(360deg);
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                opacity: 0;
                                                                                                                                                                                                                                                                                                                                                                                                                                                            }
                                                                                                                                                                                                                                                                                                                                                                                                        }

                                                                                                                                                                                                                                                                                                                                                                                                                @keyframes heartbeat {
                                                                                                                                                                                                                                                                                                                                                                                                                                0% {
                                                                                                                                                                                                                                                                                                                                                                                                                                                    transform: rotate(-45deg) scale(1);
                                                                                                                                                                                                                                                                                                                                                                                                                                }
                                                                                                                                                                                                                                                                                                                                                                                                                                            4% {
                                                                                                                                                                                                                                                                                                                                                                                                                                                                transform: rotate(-45deg) scale(1.08);
                                                                                                                                                                                                                                                                                                                                                                                                                                            }
                                                                                                                                                                                                                                                                                                                                                                                                                                                        8% {
                                                                                                                                                                                                                                                                                                                                                                                                                                                                            transform: rotate(-45deg) scale(1);
                                                                                                                                                                                                                                                                                                                                                                                                                                                        }
                                                                                                                                                                                                                                                                                                                                                                                                                                                                    12% {
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                        transform: rotate(-45deg) scale(1.08);
                                                                                                                                                                                                                                                                                                                                                                                                                                                                    }
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                16% {
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                    transform: rotate(-45deg) scale(1);
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                }
                                                                                                                                                                                                                                                                                                                                                                                                                }

                                                                                                                                                                                                                                                                                                                                                                                                                        @keyframes pulse {
                                                                                                                                                                                                                                                                                                                                                                                                                                        0%, 100% {
                                                                                                                                                                                                                                                                                                                                                                                                                                                            transform: scale(1);
                                                                                                                                                                                                                                                                                                                                                                                                                                        }
                                                                                                                                                                                                                                                                                                                                                                                                                                                    50% {
                                                                                                                                                                                                                                                                                                                                                                                                                                                                        transform: scale(1.05);
                                                                                                                                                                                                                                                                                                                                                                                                                                                    }
                                                                                                                                                                                                                                                                                                                                                                                                                        }

                                                                                                                                                                                                                                                                                                                                                                                                                                .pulse {
                                                                                                                                                                                                                                                                                                                                                                                                                                                animation: pulse 2s infinite;
                                                                                                                                                                                                                                                                                                                                                                                                                                }

